# NASA Earthdata Credentials
NASA_EARTHDATA_USERNAME=your_username_here
NASA_EARTHDATA_PASSWORD=your_password_here

# OpenAQ API (no key required, but rate limited)
OPENAQ_API_KEY=optional_key_if_available

# EPA AirNow API
AIRNOW_API_KEY=your_airnow_key_here

# OpenWeatherMap API
OPENWEATHER_API_KEY=your_openweather_key_here

# Email Service Configuration (Gmail SMTP)
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-specific-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Alternative Email Services
# SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_mailgun_domain

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cleanairsight
# Or for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/cleanairsight

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Environment Mode (development or production)
# development = Slower API refresh to save quota (240/60/120 min intervals)
# production = Real-time updates (60/15/60 min intervals)
ENVIRONMENT=development

# ML Model Settings
MODEL_RE_TRAIN_INTERVAL_HOURS=24
FORECAST_HORIZON_HOURS=24

# Data Refresh Intervals (minutes)
TEMPO_REFRESH_INTERVAL=60
GROUND_REFRESH_INTERVAL=15
WEATHER_REFRESH_INTERVAL=60

# Validation Thresholds
DISCREPANCY_THRESHOLD=0.30
LOW_CONFIDENCE_THRESHOLD=0.60
