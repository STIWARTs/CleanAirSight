# =============================================================================
# CleanAirSight Frontend - NASA Space Apps Challenge 2025
# React Environment Configuration
# =============================================================================

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Backend API
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_VERSION=v1

# WebSocket for real-time updates
REACT_APP_WEBSOCKET_URL=ws://localhost:3001

# =============================================================================
# MAPPING & VISUALIZATION
# =============================================================================

# Google Maps API (for enhanced mapping features)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Mapbox API (alternative mapping provider)
REACT_APP_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Microsoft Planetary Computer (for satellite imagery)
REACT_APP_PLANETARY_COMPUTER_BASE_URL=https://planetarycomputer.microsoft.com/api/data/v1
REACT_APP_PLANETARY_COMPUTER_STAC_URL=https://planetarycomputer.microsoft.com/api/stac/v1

# NASA Worldview (for satellite imagery visualization)
REACT_APP_NASA_WORLDVIEW_BASE_URL=https://worldview.earthdata.nasa.gov

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
REACT_APP_GA_MEASUREMENT_ID=your_google_analytics_id

# Microsoft Application Insights
REACT_APP_APPLICATIONINSIGHTS_CONNECTION_STRING=your_app_insights_connection_string

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features in Frontend
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_SATELLITE_LAYERS=true
REACT_APP_ENABLE_ML_PREDICTIONS=true
REACT_APP_ENABLE_ADVANCED_CHARTS=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# App Information
REACT_APP_APP_NAME=CleanAirSight
REACT_APP_APP_VERSION=2.0.0
REACT_APP_APP_DESCRIPTION=NASA Space Apps Challenge - Real-time Air Quality Monitoring

# Theme Configuration
REACT_APP_THEME_PRIMARY_COLOR=#3B82F6
REACT_APP_THEME_SECONDARY_COLOR=#10B981

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
REACT_APP_DEV_MODE=true
REACT_APP_DEBUG_API_CALLS=false
REACT_APP_SHOW_DEBUG_PANEL=false

# Mock Data (for development)
REACT_APP_USE_MOCK_DATA=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# CDN Configuration
REACT_APP_CDN_BASE_URL=https://cdn.cleanairsight.com

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_STRATEGY=cache-first

# =============================================================================
# NOTES:
# =============================================================================
# 1. All React environment variables must start with REACT_APP_
# 2. Copy this file to .env and fill in your actual values
# 3. Never commit .env file to version control!
# 4. Restart React dev server after changing environment variables
# =============================================================================